<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.meilin.bookingsystem"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="1"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" >
        <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    </uses-permission>

    <application
        android:icon="@drawable/lufei"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.meilin.bookingsystem.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.litreily.EnterActivity" />

                <category android:name="android.intent.category.DEFAULT" />

                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.meilin.bookingsystem.RegisterActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.litreily.RegisterActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.meilin.bookingsystem.OrderActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.litreily.BookingActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.meilin.bookingsystem.QuerystatusActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.litreily.StatusActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>